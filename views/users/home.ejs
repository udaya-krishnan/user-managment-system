<% include('../layouts/header.ejs') %>

<style>
  body {
    background-color: #f8f9fa; /* Light gray background color */
  }

  .user-info {
    max-width: 600px;
    margin: auto;
    margin-top: 50px;
    padding: 20px;
    background-color: #ffffff; /* White background color */
    border: 1px solid #ced4da; /* Bootstrap's default border color */
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Light box shadow */
  }

  .user-info h3 {
    text-align: center;
    color: #007bff; /* Bootstrap's primary color */
  }

  .user-info table {
    width: 100%;
    margin-top: 20px;
    border-collapse: collapse;
  }

  .user-info table, .user-info table td {
    border: 1px solid #ced4da; /* Bootstrap's default border color */
  }

  .user-info table td {
    padding: 10px;
    text-align: left;
  }

  .edit-link,
  .logout-link {
    display: block;
    margin-top: 20px;
    text-align: center;
    text-decoration: none;
    color: #007bff; /* Bootstrap's primary color */
  }

  .edit-link:hover,
  .logout-link:hover {
    text-decoration: underline;
  }
</style>

<div class="container user-info">
  <h3>Welcome, <%= user.name %></h3>

  <table>
    <tr>
      <td>Email</td>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <td>Mobile</td>
      <td><%= user.mobile %></td>
    </tr>
  </table>

  <a class="edit-link" href="/edit?id=<%= user._id %>">Edit</a>

  <a class="logout-link" href="/logout">Logout</a>
</div>

<% include('../layouts/footer.ejs') %>
