<% include('../layouts/header.ejs') %>

<style>
  body {
    background-color: #f8f9fa; /* Light gray background color */
  }

  .new-user-container {
    max-width: 400px;
    margin: auto;
    margin-top: 50px;
    padding: 20px;
    background-color: #ffffff; /* White background color */
    border: 1px solid #ced4da; /* Bootstrap's default border color */
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Light box shadow */
  }

  .new-user-container h1 {
    text-align: center;
    color: #007bff; /* Bootstrap's primary color */
  }

  .new-user-container form {
    margin-top: 20px;
  }

  .new-user-container form input {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ced4da; /* Bootstrap's default border color */
    border-radius: 3px;
  }

  .new-user-container form input[type="submit"] {
    width: 100%;
    padding: 10px;
    background-color: #007bff; /* Bootstrap's primary color */
    color: #fff; /* White text color */
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }

  .new-user-container form input[type="submit"]:hover {
    background-color: #0056b3; /* Darker shade on hover */
  }

  .new-user-container p {
    color: green;
    text-align: center;
  }

  .new-user-container a {
    display: block;
    margin-top: 20px;
    text-align: center;
    text-decoration: none;
    color: #007bff; /* Bootstrap's primary color */
  }

  .new-user-container a:hover {
    text-decoration: underline;
  }
</style>

<div class="container new-user-container">
  <h1>Add New User</h1>

  <form action="" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Enter Name</label>
      <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Enter Email</label>
      <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
    </div>

    <div class="mb-3">
      <label for="mno" class="form-label">Enter Mobile</label>
      <input type="text" class="form-control" name="mno" placeholder="Enter Mobile" required>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Enter Password</label>
      <input type="password" class="form-control" name="password" placeholder="Enter Password" required>
    </div>

    <input type="submit" class="btn btn-primary" value="Add New">
  </form>

  <% if (typeof message !== 'undefined') { %>
    <p style="color:green;" id="errorMessage"><%= message %></p>
  <% } %>

  <a href="/admin/dashboard">Go Back</a>
</div>

<script>
  // Add the following JavaScript code
  setTimeout(function() {
    document.getElementById('errorMessage').style.display = 'none';
  }, 2000); // 2000 milliseconds = 2 seconds
</script>

<% include('../layouts/footer.ejs') %>
